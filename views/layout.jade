doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=0.4")
    link(rel='stylesheet', href='/materialize/css/materialize.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.navbar-fixed.top.menu-top
     nav
      div.nav-wrapper
        a(href="/").brand-logo.valign-wrapper 
         img(src="images/cover.jpg" alt="" class="circle profil_pic") 
        ul.left.hide-on-med-and-down.right
          li: a(href="/users/add") Users
          li.active: a(href="/workspace") Workspace
   div.container
    div(class="slider")
     ul(class="slides")
      for slider in sliders
       li
        img(src="#{slider.src}")
        div(class="caption")
         h3=slider.title
         h5(class="light grey-text text-lighten-3")=slider.desc
    block content
    script(src="/javascripts/jquery-2.1.4.min.js" type="text/javascript")
    script(src="/materialize/js/materialize.min.js" type="text/javascript")
    script(src="/javascripts/main.js" type="text/javascript")
    block footer
